<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <!-- ðŸŸ£ Parte superior morada (15%) -->
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.15"
            android:background="#6A0DAD"
            android:gravity="center">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Editar Usuario"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@android:color/white" />
    </LinearLayout>

    <!-- ðŸ“‹ Formulario ediciÃ³n (85%) -->
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.85"
            android:padding="16dp">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <EditText
                    android:id="@+id/numdoc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="NÃºmero Documento"
                    android:enabled="false"
                    android:inputType="text" />

            <EditText
                    android:id="@+id/nombres"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Nombres"
                    android:inputType="textPersonName" />

            <EditText
                    android:id="@+id/apellidos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Apellidos"
                    android:inputType="textPersonName" />

            <EditText
                    android:id="@+id/direccion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="DirecciÃ³n"
                    android:inputType="textPostalAddress" />

            <EditText
                    android:id="@+id/correo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Correo"
                    android:inputType="textEmailAddress" />

            <EditText
                    android:id="@+id/numTel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="TelÃ©fono"
                    android:inputType="phone" />

            <EditText
                    android:id="@+id/fecNac"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Fecha de Nacimiento"
                    android:inputType="date" />

            <EditText
                    android:id="@+id/password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="ContraseÃ±a"
                    android:inputType="textPassword" />

            <EditText
                    android:id="@+id/tipodoc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="ID Tipo de Documento"
                    android:inputType="number" />

            <EditText
                    android:id="@+id/rolId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="ID Rol"
                    android:inputType="number" />

            <Button
                    android:id="@+id/btnActualizar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Actualizar" />

            <Button
                    android:id="@+id/btnCancelar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Cancelar" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>